<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scatch | Welcome</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        scatch: {
                            black: '#0a0a0a',
                            dark: '#121212',
                            card: '#1c1c1c',
                            purple: '#a855f7',
                            dim: '#6b21a8'
                        }
                    },
                    boxShadow: {
                        'neon': '0 0 15px rgba(168, 85, 247, 0.4)',
                        'input': '0 0 5px rgba(168, 85, 247, 0.2)'
                    }
                }
            }
        }
    </script>
    <style>
        /* Smooth fade animation for switching forms */
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body class="bg-scatch-black text-gray-200 font-sans flex items-center justify-center h-screen overflow-hidden relative">
    
   <% if(error.length>0){ %>
        <div id="flash-message" class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500/80 backdrop-blur-md border border-red-500 text-white shadow-neon transition-opacity duration-500 ease-in-out z-50">
            <span class="inline-block mt-1 mb-1">
                <%= error %>
            </span>
        </div>
    <% } %>

    <% if(success.length>0){ %>
        <div id="flash-message" class="absolute top-10 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-green-600/20 border border-green-500 text-green-400 shadow-lg backdrop-blur-md z-50 flex items-center gap-2">
            <i class="ri-checkbox-circle-line text-lg"></i>
            <span class="font-medium"><%= success %></span>
        </div>
    <% } %>

    <script>
        const flashMsg = document.getElementById('flash-message');
        if (flashMsg) {
            setTimeout(() => {
                // 1. Start fading out
                flashMsg.style.opacity = '0';
                
                // 2. Remove from DOM completely after fade animation (500ms)
                setTimeout(() => {
                    flashMsg.remove();
                }, 500);
            }, 3000); // 3000 milliseconds = 3 seconds
        }
    </script>

    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-scatch-purple/20 rounded-full blur-[120px] -z-10 animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-72 h-72 bg-blue-600/10 rounded-full blur-[100px] -z-10"></div>

    <div class="w-full max-w-md p-8 bg-scatch-card/60 backdrop-blur-xl border border-white/10 rounded-2xl shadow-2xl relative overflow-hidden">
        
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-scatch-purple to-transparent"></div>

        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold tracking-tighter mb-2">
                <span class="text-white">SCA</span><span class="text-scatch-purple drop-shadow-[0_0_8px_rgba(168,85,247,0.8)]">TCH</span>
            </h1>
            <p id="sub-heading" class="text-gray-400 text-sm transition-all duration-300">Welcome back! Please login to your account.</p>
        </div>

        <div id="login-section" class="fade-in">
            <form action="/users/login" method="POST" class="space-y-6">
                <div>
                    <label class="block text-xs font-medium text-gray-400 mb-1 uppercase tracking-wide">Email Address</label>
                    <div class="relative group">
                        <i class="ri-mail-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-scatch-purple transition-colors"></i>
                        <input type="email" name="email" required placeholder="name@example.com"
                            class="w-full bg-scatch-black/50 border border-white/10 rounded-lg py-3 pl-10 pr-4 text-white focus:outline-none focus:border-scatch-purple focus:shadow-input transition-all placeholder-gray-600">
                    </div>
                </div>

                <div>
                    <div class="flex items-center justify-between mb-1">
                        <label class="block text-xs font-medium text-gray-400 uppercase tracking-wide">Password</label>
                        <a href="#" class="text-xs text-scatch-purple hover:text-white transition-colors">Forgot Password?</a>
                    </div>
                    <div class="relative group">
                        <i class="ri-lock-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-scatch-purple transition-colors"></i>
                        <input type="password" name="password" required placeholder="••••••••"
                            class="w-full bg-scatch-black/50 border border-white/10 rounded-lg py-3 pl-10 pr-4 text-white focus:outline-none focus:border-scatch-purple focus:shadow-input transition-all placeholder-gray-600">
                    </div>
                </div>

                <button type="submit" class="w-full bg-scatch-purple hover:bg-scatch-dim text-white font-bold py-3 rounded-lg shadow-neon transition-all transform hover:-translate-y-0.5 active:translate-y-0">
                    Sign In
                </button>
            </form>

            <div class="mt-6 text-center text-sm text-gray-500">
                Don't have an account? 
                <button onclick="toggleForms()" class="text-white hover:text-scatch-purple font-medium transition-colors underline decoration-transparent hover:decoration-scatch-purple underline-offset-4">Create one</button>
            </div>
        </div>

        <div id="register-section" class="hidden fade-in">
            <form action="/users/register" method="POST" class="space-y-5">
                <div>
                    <label class="block text-xs font-medium text-gray-400 mb-1 uppercase tracking-wide">Full Name</label>
                    <div class="relative group">
                        <i class="ri-user-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-scatch-purple transition-colors"></i>
                        <input type="text" name="fullname" placeholder="John Doe"
                            class="w-full bg-scatch-black/50 border border-white/10 rounded-lg py-3 pl-10 pr-4 text-white focus:outline-none focus:border-scatch-purple focus:shadow-input transition-all placeholder-gray-600">
                    </div>
                </div>

                <div>
                    <label class="block text-xs font-medium text-gray-400 mb-1 uppercase tracking-wide">Email Address</label>
                    <div class="relative group">
                        <i class="ri-mail-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-scatch-purple transition-colors"></i>
                        <input type="email" name="email" placeholder="name@example.com"
                            class="w-full bg-scatch-black/50 border border-white/10 rounded-lg py-3 pl-10 pr-4 text-white focus:outline-none focus:border-scatch-purple focus:shadow-input transition-all placeholder-gray-600">
                    </div>
                </div>

                <div>
                    <label class="block text-xs font-medium text-gray-400 mb-1 uppercase tracking-wide">Password</label>
                    <div class="relative group">
                        <i class="ri-lock-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-focus-within:text-scatch-purple transition-colors"></i>
                        <input type="password" name="password" placeholder="Create a password"
                            class="w-full bg-scatch-black/50 border border-white/10 rounded-lg py-3 pl-10 pr-4 text-white focus:outline-none focus:border-scatch-purple focus:shadow-input transition-all placeholder-gray-600">
                    </div>
                </div>

                <button type="submit" class="w-full bg-scatch-purple hover:bg-scatch-dim text-white font-bold py-3 rounded-lg shadow-neon transition-all transform hover:-translate-y-0.5 active:translate-y-0 mt-2">
                    Create Account
                </button>
            </form>

            <div class="mt-6 text-center text-sm text-gray-500">
                Already have an account? 
                <button onclick="toggleForms()" class="text-white hover:text-scatch-purple font-medium transition-colors underline decoration-transparent hover:decoration-scatch-purple underline-offset-4">Sign In</button>
            </div>
        </div>

    </div>

    <script>
        const loginSection = document.getElementById('login-section');
        const registerSection = document.getElementById('register-section');
        const subHeading = document.getElementById('sub-heading');

        function toggleForms() {
            if (loginSection.classList.contains('hidden')) {
                // Show Login
                loginSection.classList.remove('hidden');
                registerSection.classList.add('hidden');
                subHeading.textContent = "Welcome back! Please login to your account.";
            } else {
                // Show Register
                loginSection.classList.add('hidden');
                registerSection.classList.remove('hidden');
                subHeading.textContent = "Create an account to start shopping.";
            }
        }
    </script>

</body>
</html>