<%- include('./partials/admin_header') %>

<div class="min-h-screen bg-zinc-900 text-white flex flex-col font-sans selection:bg-purple-500 selection:text-white">
    
    <div class="container mx-auto px-4 md:px-10 py-10 flex flex-col md:flex-row gap-10">
        
        <div class="w-full md:w-[20%] flex flex-col items-start pt-4 border-r border-zinc-700/30 min-h-[80vh]">
            <h3 class="text-xs font-bold text-zinc-500 uppercase tracking-widest mb-6 px-3">Admin Panel</h3>
            <div class="flex flex-col gap-2 w-full pr-4">
                <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/dashboard">
                    <i class="ri-dashboard-line"></i> Dashboard
                </a>
                <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/products">
                    <i class="ri-box-3-line"></i> All Products
                </a>
                <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/createproducts">
                    <i class="ri-add-circle-line"></i> Create Product
                </a>
                <a class="flex items-center gap-3 w-full py-3 px-4 text-white bg-purple-600/20 border-l-2 border-purple-500 font-medium rounded-r-lg transition-all" href="/owners/orders">
                    <i class="ri-file-list-3-line"></i> Orders
                </a>
                <a class="flex items-center gap-3 w-full py-3 px-4 text-red-400 hover:bg-red-950/20 rounded-lg transition-all mt-4" href="/owners/logout">
                    <i class="ri-logout-box-r-line"></i> Logout
                </a>
            </div>
        </div>

        <main class="w-full md:w-[80%]">
            
            <div class="flex justify-between items-center mb-10">
                <div>
                    <h1 class="text-3xl font-bold tracking-tight">Orders List</h1>
                    <p class="text-zinc-400 text-sm mt-1">Total Orders: <%= orders.length %></p>
                </div>
            </div>

            <div class="bg-zinc-800 rounded-xl border border-zinc-700/50 overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="text-zinc-500 text-xs uppercase border-b border-zinc-700 bg-zinc-900/50">
                                <th class="px-6 py-4 font-medium">Order ID</th>
                                <th class="px-6 py-4 font-medium">Customer</th>
                                <th class="px-6 py-4 font-medium">Date</th>
                                <th class="px-6 py-4 font-medium">Amount</th>
                                <th class="px-6 py-4 font-medium">Status</th>
                                <th class="px-6 py-4 font-medium text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody class="text-sm">
                            <% if (orders.length > 0) { %>
                                <% orders.forEach(function(order) { %>
                                    <tr class="border-b border-zinc-700/50 last:border-0 hover:bg-zinc-700/30 transition-colors group">
                                        <td class="px-6 py-4 text-zinc-300 font-mono">
                                            #<%= order._id.toString().slice(-6).toUpperCase() %>
                                        </td>
                                        <td class="px-6 py-4 text-white font-medium">
                                            <div class="flex items-center gap-3">
                                                <div class="w-8 h-8 rounded-full bg-zinc-700 flex items-center justify-center overflow-hidden border border-zinc-600">
                                                    <% if(order.user.picture) { %>
                                                        <img src="<%= order.user.picture %>" class="w-full h-full object-cover">
                                                    <% } else { %>
                                                        <i class="ri-user-line text-zinc-500"></i>
                                                    <% } %>
                                                </div>
                                                <%= order.user.fullname %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 text-zinc-400">
                                            <%= new Date(order.createdAt).toLocaleDateString() %>
                                        </td>
                                        <td class="px-6 py-4 text-white font-bold">
                                            â‚¹<%= order.totalAmount %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if(order.status === 'Delivered') { %>
                                                <span class="px-2.5 py-1 rounded-full text-xs font-bold bg-green-500/10 text-green-400 border border-green-500/20">Delivered</span>
                                            <% } else if(order.status === 'Cancelled') { %>
                                                <span class="px-2.5 py-1 rounded-full text-xs font-bold bg-red-500/10 text-red-400 border border-red-500/20">Cancelled</span>
                                            <% } else { %>
                                                <span class="px-2.5 py-1 rounded-full text-xs font-bold bg-purple-500/10 text-purple-400 border border-purple-500/20"><%= order.status %></span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 text-right">
                                            <a href="/owners/orders/<%= order._id %>" class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-zinc-900 border border-zinc-700 hover:border-purple-500 hover:text-purple-400 transition-all text-zinc-400">
                                                <i class="ri-arrow-right-s-line text-lg"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="px-6 py-12 text-center text-zinc-500">
                                        No orders found.
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

        </main>
    </div>
</div>

<%- include('./partials/admin_footer') %>