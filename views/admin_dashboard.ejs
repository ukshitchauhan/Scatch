<%- include('./partials/admin_header') %>

<div class="min-h-screen bg-zinc-900 text-white flex flex-col font-sans selection:bg-purple-500 selection:text-white">
    
    <div class="container mx-auto px-4 md:px-10 py-10 flex flex-col md:flex-row gap-10">
        
        <div class="w-full md:w-[20%] flex flex-col items-start pt-4 border-r border-zinc-700/30 min-h-[80vh]">
            <h3 class="text-xs font-bold text-zinc-500 uppercase tracking-widest mb-6 px-3">Admin Panel</h3>
            <div class="flex flex-col gap-2 w-full pr-4">
                <a class="flex items-center gap-3 w-full py-3 px-4 text-white bg-purple-600/20 border-l-2 border-purple-500 font-medium rounded-r-lg transition-all" href="/owners/dashboard">
                    <i class="ri-dashboard-line"></i> Dashboard
                </a>
                <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/products">
                    <i class="ri-box-3-line"></i> All Products
                </a>
                <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/createproducts">
                    <i class="ri-add-circle-line"></i> Create Product
                </a>
                <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/orders">
                    <i class="ri-file-list-3-line"></i> Orders
                </a>
            </div>
        </div>

        <main class="w-full md:w-[80%]">
            
            <div class="flex justify-between items-center mb-10">
                <div>
                    <h1 class="text-3xl font-bold tracking-tight">Dashboard Overview</h1>
                    <p class="text-zinc-400 text-sm mt-1">Manage your store details</p>
                </div>
                <div class="text-sm text-zinc-500">
                    <%= new Date().toDateString() %>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
                
                <div class="p-6 bg-zinc-800 rounded-xl border border-zinc-700/50 flex flex-col justify-between h-32 hover:border-purple-500/50 transition-all">
                    <div class="flex justify-between items-start">
                        <span class="text-zinc-400 text-sm font-medium">Total Products</span>
                        <div class="w-8 h-8 rounded bg-zinc-900 flex items-center justify-center text-purple-500">
                            <i class="ri-box-3-line"></i>
                        </div>
                    </div>
                    <h3 class="text-3xl font-bold text-white"><%= products.length %></h3>
                </div>

                <div class="p-6 bg-zinc-800 rounded-xl border border-zinc-700/50 flex flex-col justify-between h-32 hover:border-purple-500/50 transition-all">
                    <div class="flex justify-between items-start">
                        <span class="text-zinc-400 text-sm font-medium">Total Orders</span>
                        <div class="w-8 h-8 rounded bg-zinc-900 flex items-center justify-center text-blue-500">
                            <i class="ri-file-list-line"></i>
                        </div>
                    </div>
                    <h3 class="text-3xl font-bold text-white"><%= orders.length %></h3>
                </div>

                <a href="/owners/createproducts" class="group h-32 p-6 bg-zinc-800 hover:bg-purple-600 rounded-xl border border-zinc-700/50 hover:border-purple-500 flex flex-col items-center justify-center gap-2 transition-all cursor-pointer">
                    <div class="w-10 h-10 rounded-full bg-zinc-900 group-hover:bg-white/20 flex items-center justify-center text-white transition-colors">
                        <i class="ri-add-line text-xl"></i>
                    </div>
                    <span class="text-sm font-medium text-zinc-300 group-hover:text-white">Create New Product</span>
                </a>

            </div>

            <div class="bg-zinc-800 rounded-xl border border-zinc-700/50 p-6">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="text-xl font-bold text-white">Recent Products</h3>
                    <a href="/owners/products" class="text-sm text-purple-400 hover:text-purple-300">See all</a>
                </div>
                
                <div class="flex flex-col gap-4">
                    
                    <% if (products.length === 0) { %>
                        <div class="text-center text-zinc-500 py-4">No products created yet.</div>
                    <% } else { %>
                        <% products.reverse().slice(0, 10).forEach(function(product){ %>
                            
                            <div class="flex items-center justify-between p-4 rounded-lg bg-zinc-700/20 hover:bg-zinc-700/40 transition-colors border border-zinc-700/30">
                                <div class="flex items-center gap-4">
                                    <div class="w-12 h-12 bg-zinc-800 rounded-lg flex items-center justify-center overflow-hidden">
                                        <% if(product.image) { %>
                                            <img class="w-full h-full object-cover" src="<%= product.image%>" alt="">
                                        <% } else { %>
                                            <i class="ri-image-line text-zinc-500"></i>
                                        <% } %>
                                    </div>
                                    <div>
                                        <h4 class="text-white font-medium"><%= product.name %></h4>
                                        <p class="text-xs text-zinc-500">ID: <%= product._id.toString().substring(0, 6) %>...</p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <p class="text-white font-semibold">â‚¹ <%= product.price %></p>
                                    
                                </div>
                            </div>

                        <% }) %>
                    <% } %>

                </div>
            </div>

        </main>
    </div>
</div>

<%- include('./partials/admin_footer') %>