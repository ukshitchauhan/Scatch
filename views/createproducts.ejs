<%- include('./partials/admin_header') %>

    <% if(success.length>0){ %>
        <div id="flash-message" class="absolute top-20 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-blue-600/20 border border-blue-500 text-blue-400 shadow-lg backdrop-blur-md z-50 flex items-center gap-2">
            <i class="ri-checkbox-circle-line text-lg"></i>
            <span class="font-medium"><%= success %></span>
        </div>
    <% } %>

    <% if(error.length>0){ %>
        <div id="flash-message" class="absolute top-20 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-red-600/20 border border-red-500 text-red-400 shadow-lg backdrop-blur-md z-50 flex items-center gap-2">
            <i class="ri-error-warning-line text-lg"></i>
            <span class="font-medium"><%= error %></span>
        </div>
    <% } %>

    <div class="min-h-screen bg-zinc-900 text-white flex flex-col font-sans selection:bg-purple-500 selection:text-white">
        
        <div class="container mx-auto px-4 md:px-10 py-10 flex flex-col md:flex-row gap-10">
            
            <div class="w-full md:w-[20%] flex flex-col items-start pt-4 border-r border-zinc-700/30 min-h-[50vh]">
                <h3 class="text-xs font-bold text-zinc-500 uppercase tracking-widest mb-6 px-3">Admin Panel</h3>
                <div class="flex flex-col gap-2 w-full pr-4">
                    <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/dashboard">
                        <i class="ri-dashboard-line"></i> Dashboard
                    </a>
                    <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/products">
                        <i class="ri-box-3-line"></i> All Products
                    </a>
                    <a class="flex items-center gap-3 w-full py-3 px-4 text-white bg-purple-600/20 border-l-2 border-purple-500 font-medium rounded-r-lg transition-all" href="/products/createproducts">
                        <i class="ri-add-circle-line"></i> Create Product
                    </a>
                    <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/orders">
                        <i class="ri-file-list-3-line"></i> Orders
                    </a>
                </div>
            </div>

            <main class="w-full md:w-[80%]">
                <div class="w-full p-8 bg-zinc-800 rounded-2xl border border-zinc-700/50 shadow-xl shadow-purple-900/10 relative overflow-hidden">
                    
                    <div class="absolute top-0 right-0 w-64 h-64 bg-purple-600/10 rounded-full blur-[80px] pointer-events-none -z-10"></div>

                    <h2 class="text-2xl font-bold tracking-tight text-white mb-8 border-b border-zinc-700 pb-4">Create New Product</h2>
                    
                    <form autocomplete="off" action="/products/create" method="post" class="space-y-6">
                        
                        <div>
                            <h3 class="text-sm font-bold text-purple-400 uppercase tracking-widest mb-5">Product Details</h3>
                            
                            <div class="mb-6">
                                <label class="block text-xs font-medium text-zinc-400 mb-2 uppercase">Product Image URL</label>
                                <input name="image" type="text" placeholder="https://example.com/image.jpg"
                                    class="w-full bg-zinc-900 border border-zinc-700 rounded-lg py-3 px-4 text-white focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all placeholder-zinc-600">
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                <div>
                                    <label class="block text-xs font-medium text-zinc-400 mb-1 uppercase">Product Name</label>
                                    <input name="name" type="text" placeholder="e.g. Nike Air Max"
                                        class="w-full bg-zinc-900 border border-zinc-700 rounded-lg py-3 px-4 text-white focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all placeholder-zinc-600">
                                </div>
                                <div>
                                    <label class="block text-xs font-medium text-zinc-400 mb-1 uppercase">Category</label>
                                    <input name="category" type="text" placeholder="e.g. Men's Shoes"
                                        class="w-full bg-zinc-900 border border-zinc-700 rounded-lg py-3 px-4 text-white focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all placeholder-zinc-600">
                                </div>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                                <div>
                                    <label class="block text-xs font-medium text-zinc-400 mb-1 uppercase">Price (â‚¹)</label>
                                    <input name="price" type="number" placeholder="e.g. 12000"
                                        class="w-full bg-zinc-900 border border-zinc-700 rounded-lg py-3 px-4 text-white focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all placeholder-zinc-600">
                                </div>
                                
                                <div>
                                    <label class="block text-xs font-medium text-zinc-400 mb-1 uppercase">Discount (%)</label>
                                    <input name="discount" type="number" min="0" max="90" placeholder="e.g. 10"
                                        class="w-full bg-zinc-900 border border-zinc-700 rounded-lg py-3 px-4 text-white focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all placeholder-zinc-600">
                                </div>

                                <div>
                                    <label class="block text-xs font-medium text-zinc-400 mb-1 uppercase">Stock Qty</label>
                                    <input name="stock" type="number" min="0" placeholder="e.g. 50"
                                        class="w-full bg-zinc-900 border border-zinc-700 rounded-lg py-3 px-4 text-white focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all placeholder-zinc-600">
                                </div>
                            </div>

                            <div class="mb-6">
                                <label class="block text-xs font-medium text-zinc-400 mb-1 uppercase">Description</label>
                                <textarea name="description" rows="4" placeholder="Enter product description here..."
                                    class="w-full bg-zinc-900 border border-zinc-700 rounded-lg py-3 px-4 text-white focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all placeholder-zinc-600 resize-none"></textarea>
                            </div>

                        </div>

                        <div class="pt-4 border-t border-zinc-700">
                            <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 rounded-lg shadow-lg shadow-purple-900/20 transition-all transform hover:-translate-y-0.5">
                                Create New Product
                            </button>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>

    <script>
        const flashMsg = document.getElementById('flash-message');
        if (flashMsg) {
            setTimeout(() => {
                flashMsg.style.opacity = '0';
                setTimeout(() => {
                    flashMsg.remove();
                }, 500);
            }, 3000);
        }
    </script>

<%- include('./partials/admin_footer') %>