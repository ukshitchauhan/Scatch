<%- include('./partials/header') %>

<div class="min-h-screen bg-black text-white selection:bg-purple-500 selection:text-white pt-10 pb-20">

    <div class="container mx-auto px-4 md:px-8 lg:px-12">
        
        <div class="mb-8 border-b border-zinc-800 pb-4">
            <h1 class="text-3xl font-bold tracking-tight text-zinc-100">My Orders</h1>
            <p class="text-zinc-500 text-sm mt-1">Track your active shipments and review order history.</p>
        </div>

        <div class="flex flex-col lg:flex-row gap-8 relative">

            <div class="w-full lg:w-72 shrink-0 lg:sticky lg:top-24 self-start">
                
                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 mb-6 flex items-center gap-4">
                    <div class="w-16 h-16 rounded-full bg-zinc-800 flex items-center justify-center border border-zinc-700 overflow-hidden">
                        <% if (user.picture) { %>
                            <img src="<%= user.picture %>" alt="<%= user.fullname %>" class="w-full h-full object-cover">
                        <% } else { %>
                            <i class="ri-user-3-line text-3xl text-zinc-500"></i>
                        <% } %>
                    </div>
                    <div class="overflow-hidden">
                        <h2 class="font-bold text-lg truncate" title="<%= user.fullname %>"><%= user.fullname %></h2>
                        <p class="text-sm text-zinc-500 truncate" title="<%= user.email %>"><%= user.email %></p>
                    </div>
                </div>

                <nav class="bg-zinc-900 border border-zinc-800 rounded-xl overflow-hidden">
                    <div class="flex flex-col text-sm">
                        <a href="/users/profile" class="flex items-center gap-3 px-6 py-4 text-zinc-400 hover:bg-zinc-800 hover:text-zinc-200 transition-colors border-l-[3px] border-transparent">
                            <i class="ri-dashboard-line text-lg"></i>
                            Dashboard Overview
                        </a>
                        
                        <a href="/users/orders" class="flex items-center gap-3 px-6 py-4 bg-zinc-800/50 text-purple-400 border-l-[3px] border-purple-500 font-medium">
                            <i class="ri-box-3-line text-lg"></i>
                            My Orders
                        </a>

                        <a href="/users/cart" class="flex items-center gap-3 px-6 py-4 text-zinc-400 hover:bg-zinc-800 hover:text-zinc-200 transition-colors border-l-[3px] border-transparent">
                            <i class="ri-shopping-cart-line text-lg"></i>
                            Cart
                        </a>
                         
                        <a href="/users/settings" class="flex items-center gap-3 px-6 py-4 text-zinc-400 hover:bg-zinc-800 hover:text-zinc-200 transition-colors border-l-[3px] border-transparent">
                            <i class="ri-settings-4-line text-lg"></i>
                            Settings
                        </a>
                        <a href="/users/logout" class="flex items-center gap-3 px-6 py-5 text-red-400 hover:bg-red-950/30 hover:text-red-300 transition-colors border-t border-zinc-800 mt-2">
                            <i class="ri-logout-box-r-line text-lg"></i>
                            Logout
                        </a>
                    </div>
                </nav>
            </div>


            <div class="flex-grow flex flex-col gap-6">

                <% if (user.orders && user.orders.length > 0) { %>
                    
                    <% user.orders.forEach(function(order) { %>
                        <div class="bg-zinc-900 border border-zinc-800 rounded-xl overflow-hidden hover:border-zinc-700 transition-all duration-300">
                            
                            <div class="px-6 py-4 border-b border-zinc-800 bg-zinc-900/50 flex flex-wrap gap-4 justify-between items-center">
                                <div class="flex gap-8">
                                    <div>
                                        <span class="block text-xs text-zinc-500 uppercase">Order Placed</span>
                                        <span class="text-sm text-zinc-300"><%= new Date(order.createdAt).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %></span>
                                    </div>
                                    <div>
                                        <span class="block text-xs text-zinc-500 uppercase">Total</span>
                                        <span class="text-sm text-zinc-300 font-medium">₹<%= order.totalAmount %></span>
                                    </div>
                                    <div class="hidden sm:block">
                                        <span class="block text-xs text-zinc-500 uppercase">Order #ID</span>
                                        <span class="text-sm text-zinc-400 font-mono"><%= order._id.toString().toUpperCase() %></span>
                                    </div>
                                </div>
                                
                                <div>
                                    <% if(order.status === 'Delivered') { %>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-500/10 text-green-400 border border-green-500/20">
                                            Delivered
                                        </span>
                                    <% } else if(order.status === 'Cancelled') { %>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-500/10 text-red-400 border border-red-500/20">
                                            Cancelled
                                        </span>
                                    <% } else { %>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-500/10 text-purple-400 border border-purple-500/20">
                                            <%= order.status %>
                                        </span>
                                    <% } %>
                                </div>
                            </div>

                            <div class="p-6">
                                <div class="flex flex-col gap-6">
                                    <% order.products.forEach(function(item) { %>
                                        <div class="flex items-start gap-4">
                                            <div class="w-20 h-24 shrink-0 bg-zinc-800 rounded-md border border-zinc-700 overflow-hidden">
                                                 <img class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" 
                                                      src="<%=item.product.image%>" 
                                                      alt="<%= item.product.name %>">
                                            </div>
                                            
                                            <div class="flex-grow flex flex-col sm:flex-row sm:justify-between sm:items-start">
                                                <div>
                                                    <h3 class="text-zinc-200 font-medium hover:text-purple-400 transition-colors cursor-pointer"><%= item.product.name %></h3>
                                                    <p class="text-sm text-zinc-500 mt-1 line-clamp-2 w-full max-w-md">Standard License • Quantity: <%= item.quantity %></p>
                                                </div>
                                                <div class="mt-2 sm:mt-0 text-right">
                                                    <p class="text-zinc-100 font-medium">₹<%= item.product.price %></p>
                                                </div>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>

                           

                        </div>
                    <% }) %>

                <% } else { %>
                    
                    <div class="bg-zinc-900 border border-zinc-800 rounded-xl flex flex-col items-center justify-center py-20 px-4 text-center">
                        <div class="w-16 h-16 bg-zinc-800 rounded-full flex items-center justify-center mb-4 border border-zinc-700">
                            <i class="ri-shopping-bag-3-line text-2xl text-zinc-500"></i>
                        </div>
                        <h3 class="text-lg font-bold text-zinc-200">No orders placed yet</h3>
                        <p class="text-zinc-500 text-sm mt-2 max-w-sm mb-6">You haven't purchased anything from Scatch yet. Browse our collection to find something you love.</p>
                        <a href="/shop" class="px-6 py-2.5 bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium rounded-lg transition-all shadow-lg shadow-purple-900/20">
                            Start Shopping
                        </a>
                    </div>

                <% } %>

            </div>
            
        </div>
    </div>
</div>

<%- include('./partials/footer') %>