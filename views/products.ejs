<%- include('./partials/admin_header') %>

    <% if(success.length>0){ %>
        <div id="flash-message" class="absolute top-20 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-blue-600/20 border border-blue-500 text-blue-400 shadow-lg backdrop-blur-md z-50 flex items-center gap-2">
            <i class="ri-checkbox-circle-line text-lg"></i>
            <span class="font-medium"><%= success %></span>
        </div>
    <% } %>

    <% if(error.length>0){ %>
        <div id="flash-message" class="absolute top-20 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-red-600/20 border border-red-500 text-red-400 shadow-lg backdrop-blur-md z-50 flex items-center gap-2">
            <i class="ri-error-warning-line text-lg"></i>
            <span class="font-medium"><%= error %></span>
        </div>
    <% } %>

    <div class="min-h-screen bg-zinc-900 text-white flex flex-col font-sans selection:bg-purple-500 selection:text-white">
        
        <div class="container mx-auto px-4 md:px-10 py-10 flex flex-col md:flex-row gap-10">
            
            <div class="w-full md:w-[20%] flex flex-col items-start pt-4 border-r border-zinc-700/30 min-h-[50vh]">
                <h3 class="text-xs font-bold text-zinc-500 uppercase tracking-widest mb-6 px-3">Admin Panel</h3>
                <div class="flex flex-col gap-2 w-full pr-4">
                    <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/dashboard">
                        <i class="ri-dashboard-line"></i> Dashboard
                    </a>
                    <a class="flex items-center gap-3 w-full py-3 px-4 text-white bg-purple-600/20 border-l-2 border-purple-500 font-medium rounded-r-lg transition-all" href="/owners/products">
                        <i class="ri-box-3-line"></i> All Products
                    </a>
                    <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/createproducts">
                        <i class="ri-add-circle-line"></i> Create Product
                    </a>
                    <a class="flex items-center gap-3 w-full py-3 px-4 text-zinc-400 hover:text-white hover:bg-zinc-800 rounded-lg transition-all" href="/owners/orders">
                        <i class="ri-file-list-3-line"></i> Orders
                    </a>
                </div>
            </div>

            <main class="w-full md:w-[80%]">
                
                <div class="flex flex-col md:flex-row justify-between items-end md:items-center mb-8 gap-4">
                    <div>
                        <h2 class="text-2xl font-bold tracking-tight text-white">Inventory</h2>
                        <p class="text-zinc-400 text-sm mt-1">Manage catalog visibility and stock.</p>
                    </div>
                    
                    <div class="flex items-center gap-3 w-full md:w-auto">
                        <div class="relative w-full md:w-64">
                            <i class="ri-search-line absolute left-3 top-1/2 -translate-y-1/2 text-zinc-500"></i>
                            <input type="text" placeholder="Search products..." 
                                class="w-full bg-zinc-800 border border-zinc-700 rounded-lg py-2 pl-10 pr-4 text-sm text-white focus:outline-none focus:border-purple-500 transition-all placeholder-zinc-500">
                        </div>
                        <a href="/products/createproducts" class="shrink-0 bg-white text-zinc-900 hover:bg-zinc-200 font-bold px-4 py-2 rounded-lg text-sm transition-colors flex items-center gap-2">
                            <i class="ri-add-line"></i> Add New
                        </a>
                    </div>
                </div>

                <% if(products.length > 0) { %>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                        
                        <% products.forEach(function(product){ %>
                            <div class="group bg-zinc-800 rounded-xl border border-zinc-700/50 overflow-hidden hover:border-purple-500/50 hover:shadow-lg hover:shadow-purple-900/10 transition-all duration-300 flex flex-col relative <%= product.isActive ? '' : 'opacity-60 grayscale' %>">
                                
                                <div class="w-full aspect-square bg-zinc-900/50 relative overflow-hidden">
                                    
                                    <div class="absolute top-3 left-3 flex flex-col gap-1 z-20">
                                        
                                        <% if(product.isActive) { %>
                                            <span class="bg-green-500/20 text-green-400 text-[10px] font-bold px-2 py-1 rounded backdrop-blur-md border border-green-500/30">ACTIVE</span>
                                        <% } else { %>
                                            <span class="bg-red-500/20 text-red-400 text-[10px] font-bold px-2 py-1 rounded backdrop-blur-md border border-red-500/30">HIDDEN</span>
                                        <% } %>

                                        <% if(product.stock <= 0) { %>
                                            <span class="bg-red-500 text-white text-[10px] font-bold px-2 py-1 rounded shadow-lg">NO STOCK</span>
                                        <% } %>

                                        <% if(product.discount > 0) { %>
                                            <span class="bg-purple-600 text-white text-[10px] font-bold px-2 py-1 rounded shadow-lg shadow-purple-900/20">
                                                -<%= product.discount %>%
                                            </span>
                                        <% } %>
                                    </div>

                                    <div class="absolute inset-0 bg-zinc-900/60 backdrop-blur-[2px] flex items-center justify-center gap-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10">
                                        
                                        <a href="/products/edit/<%= product._id %>" class="w-10 h-10 rounded-full bg-white text-zinc-900 flex items-center justify-center hover:scale-110 transition-transform shadow-xl" title="Edit">
                                            <i class="ri-pencil-fill text-lg"></i>
                                        </a>

                                        <a href="/products/delete/<%= product._id %>" 
                                           class="w-10 h-10 rounded-full flex items-center justify-center hover:scale-110 transition-transform shadow-xl <%= product.isActive ? 'bg-red-500 text-white' : 'bg-green-500 text-white' %>"
                                           title="<%= product.isActive ? 'Deactivate' : 'Activate' %>">
                                            <% if(product.isActive) { %>
                                                <i class="ri-eye-off-line text-lg"></i>
                                            <% } else { %>
                                                <i class="ri-eye-line text-lg"></i>
                                            <% } %>
                                        </a>

                                    </div>

                                    <img class="w-full h-full object-cover mix-blend-normal opacity-90" 
                                         src="<%= product.image %>" 
                                         alt="<%= product.name %>">
                                </div>

                                <div class="p-4 flex flex-col flex-grow">
                                    <div class="mb-2">
                                        <p class="text-[10px] text-zinc-500 uppercase tracking-wider font-bold mb-1"><%= product.category %></p>
                                        <h3 class="text-white font-medium text-sm line-clamp-1"><%= product.name %></h3>
                                    </div>
                                    
                                    <div class="mt-auto pt-3 border-t border-zinc-700/50 flex items-center justify-between">
                                        
                                        <div class="flex flex-col">
                                            <% if(product.discount > 0) { %>
                                                <div class="flex items-center gap-2">
                                                    <span class="text-sm font-bold text-white">₹<%= Math.floor(product.price - (product.price * product.discount / 100)) %></span>
                                                    <span class="text-xs text-zinc-500 line-through">₹<%= product.price %></span>
                                                </div>
                                            <% } else { %>
                                                <span class="text-sm font-bold text-white">₹<%= product.price %></span>
                                            <% } %>
                                        </div>

                                        <span class="text-xs text-zinc-500">Stock: <%= product.stock %></span>
                                    </div>

                                </div>
                            </div>
                        <% }) %>

                    </div>
                <% } else { %>
                    <div class="w-full h-80 flex flex-col items-center justify-center text-zinc-500 bg-zinc-800/50 rounded-2xl border border-dashed border-zinc-700/50">
                        <i class="ri-shopping-bag-3-line text-4xl mb-3 opacity-40"></i>
                        <p class="text-sm">No products found in inventory.</p>
                    </div>
                <% } %>

            </main>
        </div>
    </div>

    <script>
        const flashMsg = document.getElementById('flash-message');
        if (flashMsg) {
            setTimeout(() => {
                flashMsg.style.opacity = '0';
                setTimeout(() => {
                    flashMsg.remove();
                }, 500);
            }, 3000);
        }
    </script>

<%- include('./partials/admin_footer') %>