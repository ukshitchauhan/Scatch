<%- include('./partials/admin_header') %>

<div class="min-h-screen bg-zinc-950 text-white font-sans selection:bg-purple-500 selection:text-white flex items-center justify-center py-20">
    
    <div class="w-full max-w-4xl px-4">
        
        <div class="flex items-center justify-between mb-6">
            <a href="/owners/dashboard" class="flex items-center gap-2 text-zinc-500 hover:text-white transition-colors group">
                <div class="w-8 h-8 rounded-full bg-zinc-900 border border-zinc-800 flex items-center justify-center group-hover:border-purple-500 transition-colors">
                    <i class="ri-arrow-left-line"></i>
                </div>
                <span class="text-sm font-medium">Dashboard</span>
            </a>
            <span class="text-xs font-bold text-zinc-600 uppercase tracking-widest">Editing Mode</span>
        </div>

        <div class="bg-zinc-900 border border-zinc-800 rounded-[2rem] p-6 md:p-10 shadow-2xl shadow-black">
            
            <form action="/products/update/<%= product._id %>" method="post">
                
                <div class="flex flex-col md:flex-row gap-10">
                    
                    <div class="w-full md:w-1/3 flex flex-col gap-6">
                        
                        <div>
                            <label class="text-xs font-bold text-zinc-500 uppercase tracking-widest ml-1 mb-2 block">Current Preview</label>
                            <div class="relative w-full aspect-[3/4] rounded-2xl overflow-hidden bg-black border-2 border-zinc-800">
                                <img src="<%= product.image %>" class="w-full h-full object-cover opacity-100">
                            </div>
                        </div>

                        <div class="group">
                            <label class="block text-xs text-zinc-500 font-medium mb-1.5 group-focus-within:text-purple-400 transition-colors">Image URL</label>
                            <div class="relative">
                                <i class="ri-link absolute left-4 top-1/2 -translate-y-1/2 text-zinc-500"></i>
                                <input type="text" name="image" value="<%= product.image %>"
                                    class="w-full bg-zinc-950 border border-zinc-800 rounded-xl pl-10 pr-4 py-3 text-sm text-white focus:outline-none focus:border-purple-500/50 focus:ring-4 focus:ring-purple-500/10 transition-all placeholder-zinc-700 font-medium truncate"
                                    placeholder="https://...">
                            </div>
                            <p class="text-[10px] text-zinc-600 mt-2 ml-1">Paste a valid image link from the internet.</p>
                        </div>

                    </div>

                    <div class="w-full md:w-2/3 flex flex-col gap-6">
                        
                        <div class="border-b border-zinc-800 pb-4 mb-2">
                             <h1 class="text-2xl font-bold tracking-tight text-white"><%= product.name %></h1>
                             <p class="text-xs text-zinc-500 mt-1">ID: <span class="font-mono text-zinc-600"><%= product._id %></span></p>
                        </div>

                        <div class="group">
                            <label class="block text-xs text-zinc-500 font-medium mb-1.5 group-focus-within:text-purple-400 transition-colors">Product Name</label>
                            <input type="text" name="name" value="<%= product.name %>"
                                class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3 text-sm text-white focus:outline-none focus:border-purple-500/50 focus:ring-4 focus:ring-purple-500/10 transition-all placeholder-zinc-700 font-medium">
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div class="group">
                                <label class="block text-xs text-zinc-500 font-medium mb-1.5 group-focus-within:text-purple-400 transition-colors">Price</label>
                                <div class="relative">
                                    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-zinc-500 text-sm font-sans">â‚¹</span>
                                    <input type="number" name="price" value="<%= product.price %>"
                                        class="w-full bg-zinc-950 border border-zinc-800 rounded-xl pl-8 pr-4 py-3 text-sm text-white focus:outline-none focus:border-purple-500/50 focus:ring-4 focus:ring-purple-500/10 transition-all placeholder-zinc-700 font-medium">
                                </div>
                            </div>
                            <div class="group">
                                <label class="block text-xs text-zinc-500 font-medium mb-1.5 group-focus-within:text-purple-400 transition-colors">Discount %</label>
                                <input type="number" name="discount" value="<%= product.discount %>"
                                    class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3 text-sm text-white focus:outline-none focus:border-purple-500/50 focus:ring-4 focus:ring-purple-500/10 transition-all placeholder-zinc-700 font-medium">
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div class="group">
                                <label class="block text-xs text-zinc-500 font-medium mb-1.5 group-focus-within:text-purple-400 transition-colors">Category</label>
                                <div class="relative">
                                    <select name="category" class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3 text-sm text-white focus:outline-none focus:border-purple-500/50 focus:ring-4 focus:ring-purple-500/10 transition-all appearance-none cursor-pointer font-medium">
                                        <option value="Bag" <%= product.category === 'Women' ? 'selected' : '' %>>Women</option>
                                        <option value="Apparel" <%= product.category === 'Men' ? 'selected' : '' %>>Men</option>
                                        <option value="Accessories" <%= product.category === 'Travel' ? 'selected' : '' %>>Travel</option>
                                        
                                    </select>
                                    <i class="ri-arrow-down-s-line absolute right-4 top-1/2 -translate-y-1/2 text-zinc-500 pointer-events-none"></i>
                                </div>
                            </div>
                            
                            <div class="group">
                                <label class="block text-xs text-zinc-500 font-medium mb-1.5 group-focus-within:text-purple-400 transition-colors">Stock Quantity</label>
                                <input type="number" name="stock" value="<%= product.stock %>"
                                    class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3 text-sm text-white focus:outline-none focus:border-purple-500/50 focus:ring-4 focus:ring-purple-500/10 transition-all placeholder-zinc-700 font-medium"
                                    placeholder="Available stock">
                            </div>
                        </div>

                        <div class="group">
                            <label class="block text-xs text-zinc-500 font-medium mb-1.5 group-focus-within:text-purple-400 transition-colors">Description</label>
                            <textarea name="description" rows="5"
                                class="w-full bg-zinc-950 border border-zinc-800 rounded-xl px-4 py-3 text-sm text-white focus:outline-none focus:border-purple-500/50 focus:ring-4 focus:ring-purple-500/10 transition-all placeholder-zinc-700 font-medium resize-none leading-relaxed"><%= product.description %></textarea>
                        </div>
                        
                        <div class="grid grid-cols-2 gap-4 mt-4 pt-4 border-t border-zinc-800">
                           
                            <button type="submit" class="flex items-center justify-center gap-2 px-6 py-3 rounded-xl bg-white text-black text-sm font-bold hover:bg-purple-500 hover:text-white transition-all shadow-lg shadow-white/10 hover:shadow-purple-500/20">
                                <i class="ri-save-line"></i> Save Changes
                            </button>
                        </div>

                    </div>
                </div>
            </form>

        </div>
    </div>

</div>

<%- include('./partials/admin_footer') %>