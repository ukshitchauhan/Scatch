<%- include('./partials/header') %>

<div class="min-h-screen bg-black text-white selection:bg-purple-500 selection:text-white pt-10 pb-20">

    <div class="container mx-auto px-4 md:px-8 lg:px-12">
        
        <div class="mb-8 border-b border-zinc-800 pb-4">
            <h1 class="text-3xl font-bold tracking-tight text-zinc-100">My Account</h1>
            <p class="text-zinc-500 text-sm mt-1">Manage your profile, orders, and settings.</p>
        </div>

        <div class="flex flex-col lg:flex-row gap-8 relative">

            <div class="w-full lg:w-72 shrink-0 lg:sticky lg:top-24 self-start">
                
                <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 mb-6 flex items-center gap-4">
                    <div class="w-16 h-16 rounded-full bg-zinc-800 flex items-center justify-center border border-zinc-700 overflow-hidden">
                        <% if (user.picture) { %>
                            <img src="<%= user.picture %>" alt="<%= user.fullname %>" class="w-full h-full object-cover">
                        <% } else { %>
                            <i class="ri-user-3-line text-3xl text-zinc-500"></i>
                        <% } %>
                    </div>
                    <div class="overflow-hidden">
                        <h2 class="font-bold text-lg truncate" title="<%= user.fullname %>"><%= user.fullname %></h2>
                        <p class="text-sm text-zinc-500 truncate" title="<%= user.email %>"><%= user.email %></p>
                    </div>
                </div>

                <nav class="bg-zinc-900 border border-zinc-800 rounded-xl overflow-hidden">
                    <div class="flex flex-col text-sm">
                        <a href="/users/profile" class="flex items-center gap-3 px-6 py-4 bg-zinc-800/50 text-purple-400 border-l-[3px] border-purple-500 font-medium">
                            <i class="ri-dashboard-line text-lg"></i>
                            Dashboard Overview
                        </a>
                        <a href="/users/orders" class="flex items-center gap-3 px-6 py-4 text-zinc-400 hover:bg-zinc-800 hover:text-zinc-200 transition-colors border-l-[3px] border-transparent">
                            <i class="ri-box-3-line text-lg"></i>
                            My Orders
                        </a>
                        <a href="/users/cart" class="flex items-center gap-3 px-6 py-4 text-zinc-400 hover:bg-zinc-800 hover:text-zinc-200 transition-colors border-l-[3px] border-transparent">
                            <i class="ri-shopping-cart-line text-lg"></i>
                            Cart
                        </a>
                        
                         <a href="/users/settings" class="flex items-center gap-3 px-6 py-4 text-zinc-400 hover:bg-zinc-800 hover:text-zinc-200 transition-colors border-l-[3px] border-transparent">
                            <i class="ri-settings-4-line text-lg"></i>
                            Settings
                        </a>
                        <a href="/users/logout" class="flex items-center gap-3 px-6 py-5 text-red-400 hover:bg-red-950/30 hover:text-red-300 transition-colors border-t border-zinc-800 mt-2">
                            <i class="ri-logout-box-r-line text-lg"></i>
                            Logout
                        </a>
                    </div>
                </nav>
            </div>


            <div class="flex-grow flex flex-col gap-8">

                <section class="bg-zinc-900 border border-zinc-800 rounded-xl overflow-hidden">
                    <div class="px-6 py-4 border-b border-zinc-800 flex justify-between items-center bg-zinc-900/50">
                        <h2 class="text-lg font-bold text-zinc-200">Personal Information</h2>
                        <a href="/users/settings" class="text-sm text-purple-500 hover:text-purple-400 font-medium">Edit Profile</a>
                    </div>
                    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-xs uppercase tracking-wider text-zinc-500 mb-1">Full Name</label>
                            <p class="text-zinc-200 font-medium"><%= user.fullname %></p>
                        </div>
                        <div>
                            <label class="block text-xs uppercase tracking-wider text-zinc-500 mb-1">Email Address</label>
                            <p class="text-zinc-200 font-medium"><%= user.email %></p>
                        </div>
                         <div>
                            <label class="block text-xs uppercase tracking-wider text-zinc-500 mb-1">Phone Number</label>
                            <p class="text-zinc-200 font-medium"><%= user.contact ? user.contact : 'Not Added' %></p>
                        </div>
                        <div>
                             <label class="block text-xs uppercase tracking-wider text-zinc-500 mb-1">Member Since</label>
                             <p class="text-zinc-200 font-medium"><%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long' }) %></p>
                        </div>
                    </div>
                </section>

                <section class="bg-zinc-900 border border-zinc-800 rounded-xl overflow-hidden">
                    <div class="px-6 py-4 border-b border-zinc-800 flex justify-between items-center bg-zinc-900/50">
                        <h2 class="text-lg font-bold text-zinc-200">Recent Orders</h2>
                        <a href="/users/orders" class="text-sm text-purple-500 hover:text-purple-400 font-medium">View All Orders</a>
                    </div>
                    
                    <div class="divide-y divide-zinc-800">
                        <% if (user.orders && user.orders.length > 0) { %>
                            
                            <% user.orders.slice().reverse().slice(0, 3).forEach(function(order) { %>
                                <div class="px-6 py-4 flex flex-col sm:flex-row sm:items-center justify-between gap-4 hover:bg-zinc-800/30 transition-colors group">
                                    
                                    <div class="flex items-center gap-4">
                                        <div class="w-10 h-10 rounded-lg bg-zinc-800 flex items-center justify-center text-purple-500 border border-zinc-700 shrink-0 group-hover:border-purple-500/50 transition-colors">
                                            <i class="ri-shopping-bag-3-line"></i>
                                        </div>
                                        <div>
                                            <p class="text-zinc-200 font-medium text-sm">Order #<%= order._id.toString().slice(-6).toUpperCase() %></p>
                                            <p class="text-zinc-500 text-xs mt-0.5"><%= new Date(order.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></p>
                                        </div>
                                    </div>

                                    <div class="flex items-center justify-between sm:justify-end gap-6 w-full sm:w-auto">
                                        <p class="text-zinc-200 font-medium text-sm">â‚¹ <%= order.totalAmount %></p>
                                        
                                        <% if(order.status === 'Delivered') { %>
                                            <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-500/10 text-green-400 border border-green-500/20">Delivered</span>
                                        <% } else if(order.status === 'Cancelled') { %>
                                            <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-500/10 text-red-400 border border-red-500/20">Cancelled</span>
                                        <% } else { %>
                                            <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-500/10 text-purple-400 border border-purple-500/20"><%= order.status %></span>
                                        <% } %>
                                        
                                        <a href="/users/orders" class="hidden sm:block text-zinc-600 hover:text-white transition-colors">
                                            <i class="ri-arrow-right-s-line text-lg"></i>
                                        </a>
                                    </div>
                                </div>
                            <% }) %>

                        <% } else { %>
                            <div class="p-8 text-center flex flex-col items-center">
                                <div class="w-12 h-12 bg-zinc-800 rounded-full flex items-center justify-center mb-3">
                                    <i class="ri-inbox-archive-line text-zinc-600 text-xl"></i>
                                </div>
                                <p class="text-zinc-400 text-sm font-medium">No orders yet</p>
                                <p class="text-zinc-600 text-xs mt-1 mb-4">Start shopping to see your orders here.</p>
                                <a href="/shop" class="text-xs bg-zinc-100 text-black px-4 py-2 rounded-lg font-bold hover:bg-purple-500 hover:text-white transition-all">Start Shopping</a>
                            </div>
                        <% } %>
                    </div>
                </section>

                </div>

        </div>
    </div>
</div>

<%- include('./partials/footer') %>