<%- include('./partials/header') %>

  <% if(error.length>0){ %>
        <div id="flash-message" class="absolute top-10 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-red-600/20 border border-red-500 text-red-400 shadow-lg backdrop-blur-md z-50 flex items-center gap-2">
            <i class="ri-error-warning-line text-lg"></i>
            <span class="font-medium"><%= error %></span>
        </div>
    <% } %>
    
    <% if(success.length>0){ %>
        <div id="flash-message" class="absolute top-10 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-green-600/20 border border-green-500 text-green-400 shadow-lg backdrop-blur-md z-50 flex items-center gap-2">
            <i class="ri-checkbox-circle-line text-lg"></i>
            <span class="font-medium"><%= success %></span>
        </div>
    <% } %>

<div class="min-h-screen bg-zinc-950 text-white font-sans selection:bg-purple-500 selection:text-white">

    <div class="container mx-auto px-4 pt-20 pb-10">
        <div class="flex flex-col md:flex-row items-end justify-between gap-6 border-b border-zinc-800/60 pb-8">
            
            <div class="max-w-xl">
                <h1 class="text-4xl md:text-6xl font-bold tracking-tighter text-white leading-none">
                    All Products
                    <span class="text-zinc-600">.</span>
                </h1>
                <p class="mt-2 text-zinc-500 text-sm">
                    <%= products.length %> items available
                </p>
            </div>

            <div class="flex items-center gap-4 w-full md:w-auto">
                <div class="relative w-full md:w-64 group">
                    <i class="ri-search-line absolute left-3 top-1/2 -translate-y-1/2 text-zinc-500 group-focus-within:text-white transition-colors"></i>
                    <input type="text" placeholder="Search collection..." 
                        class="w-full bg-zinc-900/50 border border-zinc-800 rounded-lg py-2 pl-10 pr-4 text-sm text-zinc-300 focus:outline-none focus:border-purple-500/50 focus:bg-zinc-900 transition-all placeholder-zinc-600">
                </div>
                
                <button class="w-10 h-10 flex items-center justify-center bg-zinc-900/50 border border-zinc-800 rounded-lg text-zinc-400 hover:text-white hover:border-zinc-600 transition-colors">
                    <i class="ri-filter-3-line"></i>
                </button>
            </div>

        </div>
    </div>

    <section class="container mx-auto px-4 pb-24">

        <% if(products.length > 0) { %>
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-x-6 gap-y-12">

                <% products.forEach(product => { 
                         if(product.isActive == true) {   %>
                    <div class="group relative">

                        <div class="relative aspect-[3/4] bg-zinc-900 rounded-lg overflow-hidden mb-3">
                            
                            <% if(product.discount > 0) { %>
                                <span class="absolute top-2 left-2 z-10 bg-black text-white text-[10px] font-bold px-2 py-1 rounded tracking-wide">
                                    -<%= product.discount %>%
                                </span>
                            <% } %>

                            <img src="<%= product.image %>" alt="<%= product.name %>"
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 ease-in-out opacity-90 group-hover:opacity-100" />

                            <a href="/users/cart/<%= product._id %>"
                                class="absolute bottom-3 right-3 w-10 h-10 bg-black text-white rounded-full flex items-center justify-center opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300 shadow-xl hover:bg-purple-600 hover:scale-110 z-20">
                                <i class="ri-add-line text-lg"></i>
                            </a>
                        </div>

                        <div>
                            <h3 class="text-sm font-medium text-zinc-200 group-hover:text-white transition-colors truncate">
                                <%= product.name %>
                            </h3>
                            
                            <div class="flex items-center justify-between mt-1">
                                <p class="text-[11px] text-zinc-500 uppercase tracking-wide font-medium"><%= product.category %></p>
                                
                                <div class="flex items-center gap-2 text-sm">
                                    <% if(product.discount > 0) { %>
                                        <span class="font-semibold text-white">₹<%= Math.floor(product.price - (product.price * product.discount / 100)) %></span>
                                        <span class="text-xs text-zinc-600 line-through">₹<%= product.price %></span>
                                    <% } else { %>
                                        <span class="font-semibold text-zinc-300">₹<%= product.price %></span>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                    </div>
                <% }}) %>

            </div>
        <% } else { %>

            <div class="w-full h-64 flex flex-col items-center justify-center text-zinc-600">
                <p class="text-sm tracking-widest uppercase">No products found</p>
            </div>

        <% } %>

    </section>

</div>

<%- include('./partials/footer') %>